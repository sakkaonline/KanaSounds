<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        tools:context=".Chart3Activity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:text=""
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:gravity="center"
                android:textSize="20sp"/>

        <TextView
                android:text="a"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/KanaVowel"/>

        <TextView
                android:text="i"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/KanaVowel"/>

        <TextView
                android:text="u"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/KanaVowel"/>

        <TextView
                android:text="e"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/KanaVowel"/>

        <TextView
                android:text="o"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/KanaVowel"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

            <TableRow>

                <TextView
                        android:text="-"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="-"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="-"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="-"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="-"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>
                <Space  style="@style/KanaSpace"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:id="@+id/pa_gyou_button"
                        android:text="P"
                        android:layout_weight="1"
                        style="@style/KanaCapital"/>
                <Button style="@style/KanaButton"
                        android:id="@+id/pa_button"/>
                <Button style="@style/KanaButton"
                        android:id="@+id/pi_button"/>
                <Button style="@style/KanaButton"
                        android:id="@+id/pu_button"/>
                <Button style="@style/KanaButton"
                        android:id="@+id/pe_button"/>
                <Button style="@style/KanaButton"
                        android:id="@+id/po_button"/>

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>

